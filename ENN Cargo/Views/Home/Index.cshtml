                        // Update switcher display
                        languageSwitch.innerHTML = `
                            <span class="${flagClass}"></span>
                            <span>${langText}</span>
                        `;

                        // Remove active class from all
                        document.querySelectorAll('.lang-url').forEach(el => el.classList.remove('active'));
