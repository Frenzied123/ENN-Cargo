@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ENN Cargo</title>
    <style>
        :root {
            --primary-color: #0066b3;
            --secondary-color: #e30613;
            --accent-color: #f7b500;
            --light-gray: #f5f5f5;
            --medium-gray: #e0e0e0;
            --dark-gray: #333;
        }        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--dark-gray);
            line-height: 1.6;
        }        img {
            max-width: 100%;
        }        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }        .user-type-bar {
            background-color: #f0f0f0;
            padding: 10px 0;
            text-align: right;
        }            .user-type-bar .container {
                display: flex;
                justify-content: flex-end;
                align-items: center;
            }        .user-type-button {
            display: inline-flex;
            align-items: center;
            background-color: var(--primary-color);
            color: white;
            padding: 8px 15px;
            margin-left: 10px;
            text-decoration: none;
            border: none;
            cursor: pointer;
            font-weight: 500;
        }            .user-type-button:hover {
                background-color: #004d8c;
            }        .language-selector {
            margin-left: 20px;
            padding: 8px 15px;
            background-color: white;
            border: 1px solid #ddd;
            cursor: pointer;
        }        .main-header {
            background-color: var(--primary-color);
            padding: 20px 0;
            color: white;
        }            .main-header .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }        .logo {
            display: flex;
            align-items: center;
        }            .logo img {
                max-height: 50px;
            }        .logo-text {
            font-size: 1.8rem;
            font-weight: bold;
            color: white;
            margin-left: 10px;
        }        .slogan {
            color: white;
            font-size: 1rem;
            margin-left: 10px;
            font-style: italic;
        }        .connect-login {
            display: flex;
            align-items: center;
            font-weight: 500;
            cursor: pointer;
        }        .search-icon, .lock-icon {
            margin-left: 15px;
            font-size: 1.2rem;
        }        .main-nav {
            background-color: white;
            border-bottom: 1px solid #ddd;
        }            .main-nav .container {
                display: flex;
                justify-content: space-between;
            }        .nav-links {
            display: flex;
        }            .nav-links a {
                text-decoration: none;
                color: var(--dark-gray);
                padding: 15px 20px;
                font-weight: 500;
                display: block;
                border-right: 1px solid #eee;
                font-size: 0.9rem;
            }                .nav-links a:hover {
                    background-color: #f5f5f5;
                }        .enquiry-button {
            background-color: var(--accent-color);
            color: var(--dark-gray);
            padding: 15px 25px;
            text-decoration: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            font-size: 0.9rem;
        }            .enquiry-button:hover {
                background-color: #e0a500;
            }        .hero {
            position: relative;
            height: 500px;
            background-image: url('/api/placeholder/1200/500');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
        }        .hero-content {
            max-width: 500px;
            padding: 40px;
            margin-left: 40px;
            color: white;
        }            .hero-content h1 {
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 20px;
            }        .hero-button {
            display: inline-block;
            background-color: rgba(255, 255, 255, 0.2);
            border: 1px solid white;
            color: white;
            padding: 12px 25px;
            text-decoration: none;
            margin-top: 20px;
            transition: background-color 0.3s;
        }            .hero-button:hover {
                background-color: rgba(255, 255, 255, 0.3);
            }        .services-section {
            padding: 60px 0;
            background-color: white;
        }        .section-title {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 40px;
            color: var(--primary-color);
        }        .services-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }        .service-card {
            text-align: center;
            padding: 20px;
            transition: transform 0.3s;
        }            .service-card:hover {
                transform: translateY(-5px);
            }            .service-card img {
                width: 150px;
                height: 150px;
                object-fit: contain;
                margin-bottom: 20px;
            }            .service-card h3 {
                font-size: 1.3rem;
                margin-bottom: 15px;
                color: var(--primary-color);
            }            .service-card p {
                margin-bottom: 20px;
                color: #666;
            }        .btn {
            display: inline-block;
            background-color: var(--primary-color);
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 0;
            transition: background-color 0.3s;
        }            .btn:hover {
                background-color: #004d8c;
            }        .stats-section {
            background-color: var(--light-gray);
            padding: 60px 0;
        }        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
        }        .stat-card {
            text-align: center;
            padding: 20px;
        }            .stat-card .number {
                font-size: 3rem;
                font-weight: bold;
                color: var(--primary-color);
                margin-bottom: 10px;
            }            .stat-card .label {
                font-size: 1.1rem;
                color: #666;
            }        .testimonials-section {
            padding: 60px 0;
            background-color: white;
        }        .testimonial {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }        .testimonial-text {
            font-size: 1.3rem;
            font-style: italic;
            margin-bottom: 20px;
            position: relative;
            padding: 0 40px;
        }            .testimonial-text::before,
            .testimonial-text::after {
                content: '"';
                font-size: 4rem;
                color: var(--medium-gray);
                position: absolute;
                opacity: 0.5;
            }            .testimonial-text::before {
                top: -20px;
                left: 0;
            }            .testimonial-text::after {
                bottom: -40px;
                right: 0;
            }        .testimonial-author {
            font-weight: bold;
            color: var(--primary-color);
        }        .news-section {
            padding: 60px 0;
            background-color: var(--light-gray);
        }        .news-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }        .news-card {
            background-color: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            overflow: hidden;
        }            .news-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }        .news-content {
            padding: 20px;
        }        .news-date {
            color: #999;
            font-size: 0.9rem;
            margin-bottom: 10px;
        }        .news-title {
            color: var(--primary-color);
            margin-bottom: 10px;
            font-size: 1.2rem;
        }        .news-excerpt {
            margin-bottom: 15px;
            font-size: 0.9rem;
        }        .read-more {
            display: inline-block;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.9rem;
        }            .read-more:hover {
                text-decoration: underline;
            }        .contact-section {
            padding: 60px 0;
            background-color: white;
        }        .contact-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }        .contact-info h3 {
            color: var(--primary-color);
            margin-bottom: 20px;
            font-size: 1.5rem;
        }        .contact-detail {
            margin-bottom: 15px;
            display: flex;
            align-items: flex-start;
        }        .contact-icon {
            margin-right: 10px;
            color: var(--primary-color);
            font-size: 1.2rem;
        }        .contact-form .form-group {
            margin-bottom: 20px;
        }        .contact-form label {
            display: block;
            margin-bottom: 5px;
            font-weight: 500;
        }        .contact-form input,
        .contact-form textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
        }        .contact-form textarea {
            height: 120px;
        }        .submit-btn {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 12px 25px;
            cursor: pointer;
            font-weight: 500;
        }            .submit-btn:hover {
                background-color: #004d8c;
            }        .footer {
            background-color: var(--dark-gray);
            color: white;
            padding: 60px 0 20px;
        }        .footer-grid {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 40px;
            margin-bottom: 40px;
        }        .footer-col h4 {
            color: var(--accent-color);
            margin-bottom: 20px;
            font-size: 1.2rem;
        }        .footer-col p {
            margin-bottom: 15px;
            color: #ccc;
            font-size: 0.9rem;
        }        .footer-col ul {
            list-style: none;
        }            .footer-col ul li {
                margin-bottom: 10px;
            }                .footer-col ul li a {
                    color: #ccc;
                    text-decoration: none;
                    font-size: 0.9rem;
                }                    .footer-col ul li a:hover {
                        color: white;
                    }        .social-icons {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }        .social-icon {
            width: 40px;
            height: 40px;
            background-color: #444;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: background-color 0.3s;
        }            .social-icon:hover {
                background-color: var(--primary-color);
            }        .copyright {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid #444;
            color: #999;
            font-size: 0.9rem;
        }        @@media (max-width: 992px) {
            .services-grid, .stats-grid, .news-grid {
                grid-template-columns: repeat(2, 1fr);
            }            .footer-grid {
                grid-template-columns: 1fr 1fr;
            }
        }        @@media (max-width: 768px) {
            .user-type-bar .container, .main-header .container, .main-nav .container, .contact-grid {
                flex-direction: column;
            }            .user-type-bar .container {
                justify-content: center;
            }            .nav-links {
                flex-direction: column;
                width: 100%;
            }                .nav-links a {
                    border-right: none;
                    border-bottom: 1px solid #eee;
                }            .hero-content {
                margin-left: 0;
                padding: 20px;
            }            .services-grid, .stats-grid, .news-grid, .contact-grid {
                grid-template-columns: 1fr;
            }            .footer-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Top bar with user types -->
    <div class="user-type-bar">
        <div class="container">
            <button class="user-type-button">I am a customer</button>
            <button class="user-type-button">I am a carrier</button>
            <button class="user-type-button">I am a driver</button>
            <div class="language-selector">EN ▼</div>
        </div>
    </div>    <!-- Main header with logo -->
    <header class="main-header">
        <div class="container">
            <div class="logo">
                <div class="logo-text">ENN Cargo</div>
                <div class="slogan">The European Transport Organisation</div>
            </div>
            <div class="connect-login" id="connect-login">
                <span>CONNECT-LOGIN</span>
                <span class="lock-icon">🔒</span>
                <span class="search-icon">🔍</span>
            </div>
        </div>
    </header>    <!-- Main navigation -->
    <nav class="main-nav">
        <div class="container">
            <div class="nav-links">
                <a href="#">PRODUCTS AND SERVICES</a>
                <a href="#">OUR INTERNATIONAL MARKETS</a>
                <a href="#">NEWS</a>
                <a href="#">ABOUT US</a>
                <a href="#">CONTACT</a>
            </div>
            <a href="#" class="enquiry-button">📧 ENQUIRY</a>
        </div>
    </nav>    <!-- Hero section -->
    <section class="hero">
        <div class="hero-content">
            <h1>The driving force for your business</h1>
            <a href="#" class="hero-button">Find out more →</a>
        </div>
    </section>    <!-- Services section -->
    <section class="services-section">
        <div class="container">
            <h2 class="section-title">Our Transport Solutions</h2>
            <div class="services-grid">
                <div class="service-card">
                    <img src="/api/placeholder/150/150" alt="Full Truck Loads">
                    <h3>Full Truck Loads</h3>
                    <p>We organize full loads throughout Europe with our high-quality transport network.</p>
                    <a href="#" class="btn">Learn More</a>
                </div>
                <div class="service-card">
                    <img src="/api/placeholder/150/150" alt="Partial Loads">
                    <h3>Partial Loads</h3>
                    <p>Cost-effective solutions for shipments that don't require a full truck.</p>
                    <a href="#" class="btn">Learn More</a>
                </div>
                <div class="service-card">
                    <img src="/api/placeholder/150/150" alt="Intermodal Transport">
                    <h3>Intermodal Transport</h3>
                    <p>Environmentally friendly combination of road and rail transport.</p>
                    <a href="#" class="btn">Learn More</a>
                </div>
            </div>
        </div>
    </section>    <!-- Stats section -->
    <section class="stats-section">
        <div class="container">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="number">950+</div>
                    <div class="label">Transport specialists</div>
                </div>
                <div class="stat-card">
                    <div class="number">30</div>
                    <div class="label">Years of experience</div>
                </div>
                <div class="stat-card">
                    <div class="number">550,000</div>
                    <div class="label">Transports per year</div>
                </div>
                <div class="stat-card">
                    <div class="number">37</div>
                    <div class="label">European countries</div>
                </div>
            </div>
        </div>
    </section>    <!-- Testimonials section -->
    <section class="testimonials-section">
        <div class="container">
            <h2 class="section-title">What Our Clients Say</h2>
            <div class="testimonial">
                <div class="testimonial-text">
                    ENN Cargo has been our reliable transport partner for over 5 years. Their dedication to punctuality and their professional handling of our goods has made them an invaluable part of our logistics chain.
                </div>
                <div class="testimonial-author">John Doe, Logistics Manager at Example Corp</div>
            </div>
        </div>
    </section>    <!-- News section -->
    <section class="news-section">
        <div class="container">
            <h2 class="section-title">Latest News</h2>
            <div class="news-grid">
                <div class="news-card">
                    <img src="/api/placeholder/400/200" alt="News 1">
                    <div class="news-content">
                        <div class="news-date">February 25, 2025</div>
                        <h3 class="news-title">New Route Expansion to Eastern Europe</h3>
                        <div class="news-excerpt">ENN Cargo expands its transport network with new dedicated routes to Eastern European countries.</div>
                        <a href="#" class="read-more">Read more →</a>
                    </div>
                </div>
                <div class="news-card">
                    <img src="/api/placeholder/400/200" alt="News 2">
                    <div class="news-content">
                        <div class="news-date">February 15, 2025</div>
                        <h3 class="news-title">Sustainable Transport Initiative Launch</h3>
                        <div class="news-excerpt">Our new green initiative aims to reduce carbon emissions by 30% over the next five years.</div>
                        <a href="#" class="read-more">Read more →</a>
                    </div>
                </div>
                <div class="news-card">
                    <img src="/api/placeholder/400/200" alt="News 3">
                    <div class="news-content">
                        <div class="news-date">February 5, 2025</div>
                        <h3 class="news-title">Digital Transport Management System Update</h3>
                        <div class="news-excerpt">Improved tracking and management capabilities with our latest system upgrade.</div>
                        <a href="#" class="read-more">Read more →</a>
                    </div>
                </div>
            </div>
        </div>
    </section>    <!-- Contact section -->
    <section class="contact-section">
        <div class="container">
            <h2 class="section-title">Contact Us</h2>
            <div class="contact-grid">
                <div class="contact-info">
                    <h3>Get In Touch</h3>
                    <div class="contact-detail">
                        <span class="contact-icon">📍</span>
                        <div>
                            <strong>ENN Cargo Headquarters</strong><br>
                            Cargo Street 123<br>
                            10115 Berlin, Germany
                        </div>
                    </div>
                    <div class="contact-detail">
                        <span class="contact-icon">📞</span>
                        <div>+49 123 456 7890</div>
                    </div>
                    <div class="contact-detail">
                        <span class="contact-icon">✉️</span>
                        <div>info@enncargo.com</div>
                    </div>
                    <div class="contact-detail">
                        <span class="contact-icon">🕒</span>
                        <div>
                            <strong>Opening Hours:</strong><br>
                            Monday - Friday: 8:00 AM - 6:00 PM<br>
                            Saturday: 9:00 AM - 2:00 PM
                        </div>
                    </div>
                </div>
                <div class="contact-form">
                    <div class="form-group">
                        <label for="name">Your Name</label>
                        <input type="text" id="name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="email">Your Email</label>
                        <input type="email" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" id="subject" name="subject">
                    </div>
                    <div class="form-group">
                        <label for="message">Your Message</label>
                        <textarea id="message" name="message"></textarea>
                    </div>
                    <button type="submit" class="submit-btn">Send Message</button>
                </div>
            </div>
        </div>
    </section>    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-col">
                    <h4>About ENN Cargo</h4>
                    <p>ENN Cargo is a leading European transport organization with 30 years of experience in providing reliable and cost-effective transport solutions across Europe.</p>
                    <div class="social-icons">
                        <a href="#" class="social-icon">f</a>
                        <a href="#" class="social-icon">in</a>
                        <a href="#" class="social-icon">🐦</a>
                        <a href="#" class="social-icon">yt</a>
                    </div>
                </div>
                <div class="footer-col">
                    <h4>Our Services</h4>
                    <ul>
                        <li><a href="#">Full Truck Loads</a></li>
                        <li><a href="#">Partial Loads</a></li>
                        <li><a href="#">Intermodal Transport</a></li>
                        <li><a href="#">Express Delivery</a></li>
                        <li><a href="#">Specialized Transport</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">International Markets</a></li>
                        <li><a href="#">News</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Legal Information</h4>
                    <ul>
                        <li><a href="#">Terms and Conditions</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Cookie Policy</a></li>
                        <li><a href="#">Imprint</a></li>
                        <li><a href="#">Data Protection</a></li>
                    </ul>
                </div>
            </div>
            <div class="copyright">
                <p>© 2025 ENN Cargo. All rights reserved.</p>
            </div>
        </div>
    </footer>    <script>
                document.getElementById('connect-login').addEventListener('click', function() {
            window.location.href = '@Url.Action("Login", "Account")';
        });
    </script>
</body>
</html>