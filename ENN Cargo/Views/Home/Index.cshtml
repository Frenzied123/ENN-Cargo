    @{
        Layout = null;
    }
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"] - ENN Cargo</title>
        <style>
        :root {
            --primary-color: #0066b3;
            --secondary-color: #e30613;
            --accent-color: #f7b500;
            --light-gray: #f5f5f5;
            --medium-gray: #e0e0e0;
            --dark-gray: #333;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--dark-gray);
            line-height: 1.6;
            width: 100%;
        }

        img {
            max-width: 100%;
        }

        .container {
            width: 100%;
            max-width: 100%;
            padding: 0 30px;
        }

        .user-type-bar {
            background-color: #f0f0f0;
            padding: 10px 0;
            text-align: right;
            width: 100%;
        }

            .user-type-bar .container {
                display: flex;
                justify-content: flex-end;
                align-items: center;
            }

        .user-type-button {
            display: inline-flex;
            align-items: center;
            background-color: var(--primary-color);
            color: white;
            padding: 8px 15px;
            margin-left: 10px;
            text-decoration: none;
            border: none;
            cursor: pointer;
            font-weight: 500;
        }

            .user-type-button:hover {
                background-color: #004d8c;
            }

        .language-selector {
            position: relative;
            cursor: pointer;
        }

        .language-current {
            display: flex;
            align-items: center;
            padding: 8px 15px;
            background-color: white;
            border: 1px solid #ddd;
        }

        .language-dropdown {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            background-color: white;
            min-width: 120px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1000;
            border-radius: 3px;
        }

        .language-option {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            cursor: pointer;
        }

            .language-option:hover {
                background-color: #f1f1f1;
            }

        .flag-icon {
            width: 20px;
            height: 15px;
            margin-right: 10px;
            border: 1px solid #ddd;
        }

        .show-lang {
            display: block;
        }

        .main-header {
            background-color: var(--primary-color);
            padding: 20px 0;
            color: white;
            width: 100%;
        }

            .main-header .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

        .logo {
            display: flex;
            align-items: center;
        }

            .logo img {
                max-height: 50px;
            }

        .logo-text {
            font-size: 1.8rem;
            font-weight: bold;
            color: white;
            margin-left: 10px;
        }

        .slogan {
            color: white;
            font-size: 1rem;
            margin-left: 10px;
            font-style: italic;
        }

        .login-button {
            font-weight: 500;
            cursor: pointer;
            background-color: rgba(255, 255, 255, 0.1);
            padding: 8px 15px;
            border-radius: 3px;
        }

            .login-button:hover {
                background-color: rgba(255, 255, 255, 0.2);
            }

        /* User menu dropdown styles */
        .user-menu {
            position: relative;
            display: inline-block;
        }

        .user-name {
            display: flex;
            align-items: center;
            color: white;
            cursor: pointer;
            padding: 5px 10px;
            font-weight: 500;
        }

            .user-name:hover {
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 3px;
            }

        .user-avatar {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #fff;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-right: 10px;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: white;
            min-width: 200px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1000;
            border-radius: 3px;
        }

            .dropdown-content a {
                color: var(--dark-gray);
                padding: 12px 16px;
                text-decoration: none;
                display: flex;
                align-items: center;
                transition: background-color 0.2s;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

                .dropdown-content a i {
                    margin-right: 10px;
                    font-size: 16px;
                    width: 20px;
                    text-align: center;
                }

            .dropdown-content .divider {
                height: 1px;
                background-color: #e0e0e0;
                margin: 5px 0;
            }

        .show {
            display: block;
        }

        .main-nav {
            background-color: white;
            border-bottom: 1px solid #ddd;
            width: 100%;
        }

            .main-nav .container {
                display: flex;
                justify-content: space-between;
            }

        .nav-links {
            display: flex;
            flex-grow: 1;
        }

            .nav-links a {
                text-decoration: none;
                color: var(--dark-gray);
                padding: 15px 20px;
                font-weight: 500;
                display: block;
                border-right: 1px solid #eee;
                font-size: 0.9rem;
            }

                .nav-links a:hover {
                    background-color: #f5f5f5;
                }

        .enquiry-button {
            background-color: var(--accent-color);
            color: var(--dark-gray);
            padding: 15px 25px;
            text-decoration: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            font-size: 0.9rem;
        }

            .enquiry-button:hover {
                background-color: #e0a500;
            }

        .hero {
            position: relative;
            height: 500px;
            background-image: url('/api/placeholder/1200/500');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            width: 100%;
        }

        .hero-content {
            max-width: 500px;
            padding: 40px;
            margin-left: 40px;
            color: white;
        }

            .hero-content h1 {
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 20px;
            }

        .hero-button {
            display: inline-block;
            background-color: rgba(255, 255, 255, 0.2);
            border: 1px solid white;
            color: white;
            padding: 12px 25px;
            text-decoration: none;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

            .hero-button:hover {
                background-color: rgba(255, 255, 255, 0.3);
            }
            .services-section {
                padding: 60px 0;
                background-color: white;
            }            .section-title {
                text-align: center;
                font-size: 2rem;
                margin-bottom: 40px;
                color: var(--primary-color);
            }            .services-grid {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 30px;
            }            .service-card {
                text-align: center;
                padding: 20px;
                transition: transform 0.3s;
            }                .service-card:hover {
                    transform: translateY(-5px);
                }                .service-card img {
                    width: 150px;
                    height: 150px;
                    object-fit: contain;
                    margin-bottom: 20px;
                }                .service-card h3 {
                    font-size: 1.3rem;
                    margin-bottom: 15px;
                    color: var(--primary-color);
                }                .service-card p {
                    margin-bottom: 20px;
                    color: #666;
                }            .btn {
                display: inline-block;
                background-color: var(--primary-color);
                color: white;
                padding: 10px 20px;
                text-decoration: none;
                border-radius: 0;
                transition: background-color 0.3s;
            }                .btn:hover {
                    background-color: #004d8c;
                }            .stats-section {
                background-color: var(--light-gray);
                padding: 60px 0;
            }            .stats-grid {
                display: grid;
                grid-template-columns: repeat(4, 1fr);
                gap: 30px;
            }            .stat-card {
                text-align: center;
                padding: 20px;
            }                .stat-card .number {
                    font-size: 3rem;
                    font-weight: bold;
                    color: var(--primary-color);
                    margin-bottom: 10px;
                }                .stat-card .label {
                    font-size: 1.1rem;
                    color: #666;
                }            .testimonials-section {
                padding: 60px 0;
                background-color: white;
            }            .testimonial {
                max-width: 800px;
                margin: 0 auto;
                text-align: center;
            }            .testimonial-text {
                font-size: 1.3rem;
                font-style: italic;
                margin-bottom: 20px;
                position: relative;
                padding: 0 40px;
            }                .testimonial-text::before,
                .testimonial-text::after {
                    content: '"';
                    font-size: 4rem;
                    color: var(--medium-gray);
                    position: absolute;
                    opacity: 0.5;
                }                .testimonial-text::before {
                    top: -20px;
                    left: 0;
                }                .testimonial-text::after {
                    bottom: -40px;
                    right: 0;
                }            .testimonial-author {
                font-weight: bold;
                color: var(--primary-color);
            }            .news-section {
                padding: 60px 0;
                background-color: var(--light-gray);
            }            .news-grid {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 30px;
            }            .news-card {
                background-color: white;
                box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                overflow: hidden;
            }                .news-card img {
                    width: 100%;
                    height: 200px;
                    object-fit: cover;
                }            .news-content {
                padding: 20px;
            }            .news-date {
                color: #999;
                font-size: 0.9rem;
                margin-bottom: 10px;
            }            .news-title {
                color: var(--primary-color);
                margin-bottom: 10px;
                font-size: 1.2rem;
            }            .news-excerpt {
                margin-bottom: 15px;
                font-size: 0.9rem;
            }            .read-more {
                display: inline-block;
                color: var(--primary-color);
                text-decoration: none;
                font-weight: 500;
                font-size: 0.9rem;
            }                .read-more:hover {
                    text-decoration: underline;
                }            .contact-section {
                padding: 60px 0;
                background-color: white;
            }            .contact-grid {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 40px;
            }            .contact-info h3 {
                color: var(--primary-color);
                margin-bottom: 20px;
                font-size: 1.5rem;
            }            .contact-detail {
                margin-bottom: 15px;
                display: flex;
                align-items: flex-start;
            }            .contact-icon {
                margin-right: 10px;
                color: var(--primary-color);
                font-size: 1.2rem;
            }            .contact-form .form-group {
                margin-bottom: 20px;
            }            .contact-form label {
                display: block;
                margin-bottom: 5px;
                font-weight: 500;
            }            .contact-form input,
            .contact-form textarea {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
            }            .contact-form textarea {
                height: 120px;
            }            .submit-btn {
                background-color: var(--primary-color);
                color: white;
                border: none;
                padding: 12px 25px;
                cursor: pointer;
                font-weight: 500;
            }                .submit-btn:hover {
                    background-color: #004d8c;
                }            .footer {
                background-color: var(--dark-gray);
                color: white;
                padding: 60px 0 20px;
            }            .footer-grid {
                display: grid;
                grid-template-columns: 2fr 1fr 1fr 1fr;
                gap: 40px;
                margin-bottom: 40px;
            }            .footer-col h4 {
                color: var(--accent-color);
                margin-bottom: 20px;
                font-size: 1.2rem;
            }            .footer-col p {
                margin-bottom: 15px;
                color: #ccc;
                font-size: 0.9rem;
            }            .footer-col ul {
                list-style: none;
            }                .footer-col ul li {
                    margin-bottom: 10px;
                }                    .footer-col ul li a {
                        color: #ccc;
                        text-decoration: none;
                        font-size: 0.9rem;
                    }                        .footer-col ul li a:hover {
                            color: white;
                        }            .social-icons {
                display: flex;
                gap: 15px;
                margin-top: 20px;
            }            .social-icon {
                width: 40px;
                height: 40px;
                background-color: #444;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
                transition: background-color 0.3s;
            }                .social-icon:hover {
                    background-color: var(--primary-color);
                }            .copyright {
                text-align: center;
                padding-top: 20px;
                border-top: 1px solid #444;
                color: #999;
                font-size: 0.9rem;
            }

        @@media (max-width: 992px) {
            .services-grid, .stats-grid, .news-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .footer-grid {
                grid-template-columns: 1fr 1fr;
            }
        }

        @@media (max-width: 768px) {
            .user-type-bar .container, .main-header .container, .main-nav .container, .contact-grid {
                flex-direction: column;
            }

            .user-type-bar .container {
                justify-content: center;
            }

            .nav-links {
                flex-direction: column;
                width: 100%;
            }

                .nav-links a {
                    border-right: none;
                    border-bottom: 1px solid #eee;
                }

            .hero-content {
                margin-left: 0;
                padding: 20px;
            }

            .dropdown-content {
                right: auto;
                left: 0;
            }

            .language-dropdown {
                right: auto;
                left: 0;
            }
        }
        #meta-navigation {
            background-color: var(--light-gray);
            padding: 10px 0;
            width: 100%;
            border-bottom: 1px solid var(--medium-gray);
        }

        .layout-wrapper {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
        }

        .type-switch {
            margin: 0 10px;
        }

        .type-switch a {
            display: flex;
            align-items: center;
            padding: 8px 15px;
            text-decoration: none;
            color: var(--dark-gray);
            background-color: white;
            border: 1px solid var(--medium-gray);
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .type-switch.active a {
            background-color: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .type-switch a:hover {
            background-color: var(--primary-color);
            color: white;
        }

        .type-switch img.icon {
            width: 20px;
            height: 20px;
            margin-right: 8px;
        }

        .language-switch-wrapper {
            position: relative;
        }

        .language-switch {
            display: flex;
            align-items: center;
            padding: 8px 15px;
            background-color: white;
            border: 1px solid var(--medium-gray);
            cursor: pointer;
            font-weight: 500;
        }

        .flag {
            width: 21px;
            height: 14px;
            margin-right: 8px;
            background-size: cover;
        }

        .flag-int { background-image: url('/static/assets/flags/int.png'); }
        .flag-ge { background-image: url('/static/assets/flags/ge.png'); }
        .flag-am { background-image: url('/static/assets/flags/am.png'); }

        .language-flyout {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            background-color: white;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            z-index: 1000;
            min-width: 250px;
            border: 1px solid var(--medium-gray);
        }

        .language-flyout.show {
            display: block;
        }

        .heading {
            padding: 15px;
            border-bottom: 1px solid var(--medium-gray);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .headline {
            font-size: 1.1rem;
            color: var(--primary-color);
        }

        .close-button {
            background: none;
            border: none;
            font-size: 1.2rem;
            cursor: pointer;
            color: var(--dark-gray);
        }

        .language-list {
            list-style: none;
        }

        .language-item {
            padding: 10px 15px;
            cursor: pointer;
        }

        .language-item:hover {
            background-color: var(--light-gray);
        }

        .international-item, .language-item a {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: var(--dark-gray);
        }

        .label {
            flex-grow: 1;
            margin: 0 10px;
        }

        .lang-codes a {
            color: var(--primary-color);
            text-decoration: none;
        }

        .lang-codes a.active {
            font-weight: bold;
        }

        @@media (max-width: 768px) {
            .layout-wrapper {
                justify-content: center;
            }
            
            .type-switch {
                margin: 5px;
            }
        }
        </style>
    </head>
    <body>
        <!-- Top bar with user types -->
 <div id="meta-navigation" data-tracking-area="metaSwitcher:auftraggeberHeader">
        <div class="container">
            <div class="row">
                <div class="col flex">
                    <div class="layout-wrapper">
                        <span class="active type-switch">
                            <a href="/int/en" data-tracking-link-internal="/virtual/int/en">
                                <img class="icon" src="/static/assets/svg/loads.svg" alt="Customer">
                                <span class="text">I am a customer</span>
                            </a>
                        </span>
                        <span class="type-switch">
                            <a href="/int/en/carrier" data-tracking-link-internal="/virtual/int/en/transportunternehmer">
                                <img class="icon" src="/static/assets/svg/truck-front.svg" alt="Carrier">
                                <span class="text">I am a carrier</span>
                            </a>
                        </span>
                        <div class="language-switch-wrapper">
                            <button type="button" class="language-switch" id="languageSwitch">
                                <span class="flag flags-21x14 flag-int"></span>
                                <span>en</span>
                            </button>
                            <div class="language-flyout language-selection has-transition" id="languageFlyout">
                                <div class="container">
                                    <div class="row">
                                        <div class="col">
                                            <div class="heading">
                                                <h2 class="headline">Select a language</h2>
                                                <button type="button" class="close-button" id="closeFlyout">×</button>
                                            </div>
                                            <div class="international-item">
                                                <a href="/int/en" data-save-language="en-INT">
                                                    <span class="flag flags-21x14 flag-int"></span>
                                                    <span class="label">International</span>
                                                    <span class="lang-codes">
                                                        <a class="lang-url active" data-save-language="en-INT" href="/int/en">en</a>
                                                    </span>
                                                </a>
                                            </div>
                                            <ul class="language-list">
                                                <li class="language-item">
                                                    <a href="/ge/en" data-save-language="en-GE">
                                                        <span class="flag flags-21x14 flag-ge"></span>
                                                        <span class="label">საქართველო</span>
                                                        <span class="lang-codes">
                                                            <a class="lang-url" data-save-language="en-GE" href="/ge/en">en</a>
                                                        </span>
                                                    </a>
                                                </li>
                                                <li class="language-item">
                                                    <a href="/am/ru" data-save-language="ru-AM">
                                                        <span class="flag flags-21x14 flag-am"></span>
                                                        <span class="label">Армения</span>
                                                        <span class="lang-codes">
                                                            <a class="lang-url" data-save-language="ru-AM" href="/am/ru">ru</a>
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>        <!-- Main header with logo -->
    <header class="main-header">
        <div class="container">
            <div class="logo">
                <div class="logo-text">ENN Cargo</div>
                <div class="slogan">The European Transport Organisation</div>
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <!-- For authenticated users -->
                <div class="user-menu">
                    <div class="user-name" id="userMenuButton">
                        <div class="user-avatar">
                            @(User.FindFirst("FirstName")?.Value?[0] ?? 'U')
                        </div>
                        <span>@(User.FindFirst("CompanyName")?.Value ?? User.FindFirst("FirstName")?.Value ?? "User")</span>
                        <span style="margin-left: 5px;">▼</span>
                    </div>
                    <div class="dropdown-content" id="userDropdown">
                        <a href="@Url.Action("Dashboard", "Account")"><i>📊</i> Dashboard</a>
                        <a href="@Url.Action("Profile", "Account")"><i>👤</i> My Profile</a>
                        <a href="@Url.Action("Notifications", "Account")"><i>🔔</i> Notifications</a>
                        <div class="divider"></div>
                        <a href="@Url.Action("Settings", "Account")"><i>⚙️</i> Settings</a>
                        <a href="@Url.Action("Help", "Account")"><i>❓</i> Help Center</a>
                        <div class="divider"></div>
                        <a href="javascript:document.getElementById('logoutForm').submit();"><i>🚪</i> Log Out</a>
                    </div>
                </div>
                <form id="logoutForm" asp-action="Logout" asp-controller="Account" method="post" style="display:none;">
                    @Html.AntiForgeryToken()
                </form>
            }
            else
            {
                <!-- For non-authenticated users - renamed from "CONNECT LOGIN" to just "LOGIN" -->
                <div class="login-button" id="login-button">
                    <span>LOGIN</span>
                </div>
            }
        </div>
    </header>
        <!-- Main navigation -->
    <nav class="main-nav">
        <div class="container">
            <div class="nav-links">
                <a href="#">PRODUCTS AND SERVICES</a>
                <a href="#">OUR INTERNATIONAL MARKETS</a>
                <a href="#">NEWS</a>
                <a href="#">ABOUT US</a>
                <a href="#">CONTACT</a>
            </div>
            <a href="#" class="enquiry-button">ENQUIRY</a>
        </div>
    </nav>        <!-- Hero section -->
        <section class="hero">
            <div class="hero-content">
                <h1>The driving force for your business</h1>
                <a href="#" class="hero-button">Find out more →</a>
            </div>
        </section>        <!-- Services section -->
        <section class="services-section">
            <div class="container">
                <h2 class="section-title">Our Transport Solutions</h2>
                <div class="services-grid">
                    <div class="service-card">
                        <img src="/api/placeholder/150/150" alt="Full Truck Loads">
                        <h3>Full Truck Loads</h3>
                        <p>We organize full loads throughout Europe with our high-quality transport network.</p>
                        <a href="#" class="btn">Learn More</a>
                    </div>
                    <div class="service-card">
