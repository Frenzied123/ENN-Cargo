@model ENN_Cargo.Models.AssignShipmentViewModel@{
    ViewData["Title"] = "Assign Shipment";
}<h1>Assign Shipment #@Model.ShipmentId</h1><div asp-validation-summary="All" class="text-danger"></div><form asp-controller="Shipment" asp-action="AssignShipment" method="post">
    <input type="hidden" asp-for="ShipmentId" />    <div class="form-group">
        <label asp-for="DriverId">Select Driver:</label>
        <select asp-for="DriverId" class="form-control" asp-items="Model.DriverOptions" required>
            <option value="">Select a Driver</option>
        </select>
        <span asp-validation-for="DriverId" class="text-danger"></span>
    </div>    <div class="form-group">
        <label asp-for="VehicleId">Select Vehicle:</label>
        <select asp-for="VehicleId" class="form-control" asp-items="Model.VehicleOptions" required>
            <option value="">Select a Vehicle</option>
        </select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>    <button type="submit" class="btn btn-success">Okay</button>
    <a asp-controller="Shipment" asp-action="ListOfShipments" class="btn btn-secondary">Cancel</a>
</form>@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}