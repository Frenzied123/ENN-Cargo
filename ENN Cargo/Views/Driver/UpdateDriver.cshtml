@model ENN_Cargo.Models.DriverViewModel

<h2 class="mb-4">Update Driver</h2>

<form asp-action="UpdateDriver" asp-controller="Driver" method="post" class="p-4 border rounded shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" required />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" required />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedTruckCompanyId">Truck Company</label>
        <select asp-for="SelectedTruckCompanyId" class="form-control" asp-items="Model.TruckCompanyList">
            <option value="">Select a Company</option>
        </select>
        <span asp-validation-for="SelectedTruckCompanyId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
