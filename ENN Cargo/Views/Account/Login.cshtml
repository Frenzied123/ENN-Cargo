@model ENN_Cargo.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    var userType = Context.Request.Query["userType"].ToString();
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ENN Cargo - Login</title>
    <style>
        :root {
            --primary-color: #003781;
            --secondary-color: #e30613;
            --accent-color: #009fe3;
            --light-gray: #f5f5f5;
            --medium-gray: #e0e0e0;
            --dark-gray: #333;
            --white: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            color: var(--dark-gray);
            line-height: 1.6;
            background-color: var(--light-gray);
            min-height: 100vh;
        }

        .login-container {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .login-left {
            width: 50%;
            background-color: var(--primary-color);
            position: relative;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

            /* This is where to place the background image for the left side */
            .login-left::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: url('https://res.cloudinary.com/dyonctb8p/image/upload/v1742459129/19612_t2022-79904-small_xifliv.png');
                background-size: cover;
                background-position: center;
                opacity: 0.15;
                z-index: 1;
            }

        .login-right {
            width: 50%;
            background-color: var(--white);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            position: relative;
        }

        .header {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 25px;
            background-color: var(--white);
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            z-index: 10;
        }

        .logo {
            display: flex;
            align-items: center;
        }

            .logo img {
                height: 40px;
                background-color: white;
                padding: 2px;
                border-radius: 3px;
                transition: transform 0.2s;
                cursor: pointer;
            }

                .logo img:hover {
                    transform: scale(1.05);
                }

        /* Language selector styling */
        .language-selector {
            position: relative;
            display: inline-block;
        }

        .language-switch {
            display: flex;
            align-items: center;
            padding: 5px 10px;
            background-color: transparent;
            border: 1px solid rgba(0, 55, 129, 0.3);
            border-radius: 3px;
            cursor: pointer;
            font-size: 0.8rem;
            color: var(--primary-color);
            transition: all 0.3s;
        }

            .language-switch:hover {
                background-color: rgba(0, 55, 129, 0.05);
                border-color: rgba(0, 55, 129, 0.5);
            }

        .flag {
            width: 20px;
            height: 15px;
            margin-right: 5px;
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
            display: inline-block;
            vertical-align: middle;
            border: 1px solid rgba(0,0,0,0.1);
        }

        .flag-uk {
            background-image: url('data:image/svg+xml;base64,');
        }

        .flag-bg {
            background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCA2MDAgNDAwIj48cGF0aCBmaWxsPSIjZmZmZmZmIiBkPSJNMCAwaDYwMHYxMzMuM0gweiIvPjxwYXRoIGZpbGw9IiMwMDk2NjUiIGQ9Ik0wIDEzMy4zaDYwMHYxMzMuNEgweiIvPjxwYXRoIGZpbGw9IiNkNjI2MTIiIGQ9Ik0wIDI2Ni43aDYwMFY0MDBIMHoiLz48L3N2Zz4=');
        }

        .language-flyout {
            display: none;
            position: absolute;
            top: 110%;
            right: 0;
            background-color: white;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            z-index: 1000;
            min-width: 260px;
            border-radius: 3px;
            border-top: 3px solid var(--accent-color);
            animation: fadeIn 0.2s ease-in-out;
        }

            .language-flyout.show {
                display: block;
            }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .heading {
            padding: 16px;
            border-bottom: 1px solid var(--medium-gray);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .headline {
            font-size: 1.1rem;
            color: var(--primary-color);
            font-weight: 600;
        }

        .close-button {
            background: none;
            border: none;
            font-size: 1.4rem;
            cursor: pointer;
            color: var(--dark-gray);
            transition: color 0.2s;
        }

            .close-button:hover {
                color: var(--primary-color);
            }

        .language-list {
            list-style: none;
            padding: 5px 0;
        }

        .language-item {
            cursor: pointer;
            transition: all 0.3s;
        }

            .language-item:hover {
                background-color: #f5f7f9;
            }

            .language-item a {
                display: flex;
                align-items: center;
                text-decoration: none;
                color: var(--dark-gray);
                padding: 12px 16px;
            }

        .label {
            flex-grow: 1;
            margin: 0 10px;
        }

        .welcome-text {
            position: relative;
            z-index: 2;
            color: white;
            padding: 40px;
            max-width: 600px;
            margin-top: 80px;
        }

            .welcome-text h1 {
                font-size: 2.5rem;
                margin-bottom: 20px;
                font-weight: 700;
            }

            .welcome-text p {
                font-size: 1.2rem;
                margin-bottom: 30px;
                line-height: 1.8;
            }

        .company-highlights {
            position: relative;
            z-index: 2;
            color: white;
            padding: 0 40px;
            margin-top: 40px;
        }

        .highlight-item {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
        }

        .highlight-icon {
            width: 40px;
            height: 40px;
            margin-right: 15px;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .highlight-content h3 {
            font-size: 1.2rem;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .highlight-content p {
            font-size: 0.95rem;
            opacity: 0.9;
        }

        .login-form-container {
            width: 100%;
            max-width: 380px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            padding: 25px;
            margin-top: 70px;
        }

        .login-title {
            color: var(--primary-color);
            font-size: 1.4rem;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 600;
            position: relative;
        }

            .login-title:after {
                content: '';
                position: absolute;
                bottom: -8px;
                left: 50%;
                transform: translateX(-50%);
                width: 40px;
                height: 2px;
                background-color: var(--accent-color);
            }

        .alert {
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 5px;
            font-size: 0.95rem;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .input-group {
            margin-bottom: 15px;
            position: relative;
        }

        .input-field {
            width: 100%;
            padding: 10px;
            padding-left: 35px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

            .input-field:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 5px rgba(0, 159, 227, 0.3);
                outline: none;
            }

        .input-icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
            transition: all 0.3s;
        }

        .input-field:focus + .input-icon {
            color: var(--accent-color);
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        .remember-forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .checkbox-container {
            display: flex;
            align-items: center;
        }

        .checkbox-label {
            margin-left: 5px;
            font-size: 0.8rem;
            color: #555;
            cursor: pointer;
        }

        .checkbox-container input[type="checkbox"] {
            width: 14px;
            height: 14px;
            cursor: pointer;
        }

        .forgot-link {
            color: var(--primary-color);
            text-decoration: none;
            font-size: 0.8rem;
            transition: all 0.3s;
        }

            .forgot-link:hover {
                color: var(--accent-color);
                text-decoration: underline;
            }

        .login-button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 15px;
            text-align: center;
        }

            .login-button:hover {
                background-color: var(--accent-color);
            }

        .login-separator {
            display: flex;
            align-items: center;
            margin: 15px 0;
            color: #777;
        }

            .login-separator:before,
            .login-separator:after {
                content: "";
                flex: 1;
                height: 1px;
                background-color: #ddd;
            }

            .login-separator span {
                padding: 0 10px;
                font-size: 0.8rem;
            }

        .register-section {
            text-align: center;
            margin-top: 15px;
        }

            .register-section h3 {
                color: var(--dark-gray);
                font-size: 1rem;
                margin-bottom: 10px;
                font-weight: 600;
            }

            .register-section p {
                font-size: 0.75rem;
                color: #666;
                margin-bottom: 10px;
            }

        .register-options {
            display: flex;
            justify-content: space-between;
            gap: 8px;
            margin-top: 10px;
        }

        .register-option {
            flex: 1;
            background-color: #f5f7fa;
            padding: 10px 8px;
            border-radius: 4px;
            transition: all 0.3s;
            text-decoration: none;
            color: var(--dark-gray);
            display: flex;
            flex-direction: column;
            align-items: center;
            border: 1px solid #e5e5e5;
        }

            .register-option:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 10px rgba(0,0,0,0.1);
                border-color: var(--accent-color);
            }

        .register-option-icon {
            width: 35px;
            height: 35px;
            background-color: var(--primary-color);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 8px;
            color: white;
        }

        .register-option h4 {
            font-size: 0.85rem;
            margin-bottom: 5px;
            font-weight: 600;
            color: var(--primary-color);
        }

        .register-option p {
            font-size: 0.7rem;
            color: #666;
            line-height: 1.3;
            margin-bottom: 0;
        }

        .footer {
            margin-top: 20px;
            text-align: center;
            color: #777;
            font-size: 0.75rem;
        }

        .footer-links {
            margin-top: 5px;
        }

        .footer-link {
            color: var(--primary-color);
            text-decoration: none;
            margin: 0 5px;
            transition: all 0.3s;
            font-size: 0.7rem;
        }

            .footer-link:hover {
                color: var(--accent-color);
                text-decoration: underline;
            }

        /* Responsive adjustments */
        @@media (max-width: 1200px) {
            .login-form-container

        {
            max-width: 400px;
            padding: 30px;
        }

        }

        @@media (max-width: 1100px) {
            .welcome-text h1

        {
            font-size: 2rem;
        }

        .login-form-container {
            max-width: 350px;
            padding: 20px;
        }

        }

        @@media (max-width: 992px) {
            .login-container

        {
            flex-direction: column;
            height: auto;
        }

        .login-left, .login-right {
            width: 100%;
        }

        .login-left {
            min-height: 250px;
        }

        .welcome-text {
            margin-top: 70px;
            padding: 15px;
        }

            .welcome-text h1 {
                font-size: 1.8rem;
            }

            .welcome-text p {
                font-size: 1rem;
            }

        .company-highlights {
            display: none;
        }

        .login-right {
            padding: 20px 15px 40px;
        }

        .login-form-container {
            margin-top: 60px;
            max-width: 400px;
        }

        .register-options {
            display: flex;
            flex-direction: row;
        }

        }

        @@media (max-width: 576px) {
            .header

        {
            padding: 10px;
        }

        .logo img {
            height: 35px;
        }

        .login-left {
            min-height: 200px;
        }

        .welcome-text {
            margin-top: 60px;
        }

            .welcome-text h1 {
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .welcome-text p {
                font-size: 0.9rem;
                margin-bottom: 15px;
            }

        .login-form-container {
            padding: 15px;
            margin-top: 50px;
        }

        .login-title {
            font-size: 1.2rem;
        }

        .register-options {
            flex-direction: column;
            gap: 10px;
        }

        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <!-- Welcome section with company message -->
            <div class="welcome-text">
                <h1>Welcome to ENN Cargo</h1>
                <p>The European Transport Organisation providing reliable and cost-effective logistics solutions across Europe. Access your account to manage shipments, track loads, and connect with our carrier network.</p>
            </div>

            <!-- Company highlights showcasing key features -->
            <div class="company-highlights">
                <div class="highlight-item">
                    <div class="highlight-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="1" y="3" width="15" height="13"></rect>
                            <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                            <circle cx="5.5" cy="18.5" r="2.5"></circle>
                            <circle cx="18.5" cy="18.5" r="2.5"></circle>
                        </svg>
                    </div>
                    <div class="highlight-content">
                        <h3>Full Truck Loads</h3>
                        <p>Over 7,000 full truck loads organized daily across Europe</p>
                    </div>
                </div>
                <div class="highlight-item">
                    <div class="highlight-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>
                    </div>
                    <div class="highlight-content">
                        <h3>Global Network</h3>
                        <p>Operating in 37 European countries with multilingual support</p>
                    </div>
                </div>
                <div class="highlight-item">
                    <div class="highlight-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                        </svg>
                    </div>
                    <div class="highlight-content">
                        <h3>Real-time Tracking</h3>
                        <p>Digital solutions for complete transparency in the transport process</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="login-right">
            <!-- Header with logo and language selector -->
            <div class="header">
                <div class="logo">
                    <!-- Replace with your actual logo image -->
                    <img src="https://res.cloudinary.com/dyonctb8p/image/upload/v1742193325/ENN_cargo_transparent_goqj9p.png" alt="ENN Cargo Logo" onclick="window.location.href='/'">
                </div>

                <div class="language-selector">
                    <button type="button" class="language-switch" id="languageSwitch">
                        <span class="flag flag-uk"></span>
                        <span>EN</span>
                        <span style="margin-left: 5px;">▼</span>
                    </button>
                    <div class="language-flyout" id="languageFlyout">
                        <div class="heading">
                            <h2 class="headline">Select a language</h2>
                            <button type="button" class="close-button" id="closeFlyout">×</button>
                        </div>
                        <ul class="language-list">
                            <li class="language-item">
                                <a href="/int/en" class="international-item">
                                    <span class="flag flag-uk"></span>
                                    <span class="label">English</span>
                                </a>
                            </li>
                            <li class="language-item">
                                <a href="/bg/en">
                                    <span class="flag flag-bg"></span>
                                    <span class="label">Български</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Main login form -->
            <div class="login-form-container">
                <h2 class="login-title">Account Login</h2>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                <form asp-action="Login" method="post">
                    <div class="input-group">
                        <input asp-for="Email" class="input-field" placeholder="Email Address" />
                        <div class="input-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <input asp-for="Password" class="input-field" placeholder="Password" type="password" />
                        <div class="input-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="remember-forgot">
                        <div class="checkbox-container">
                            <input asp-for="RememberMe" type="checkbox" id="RememberMe" />
                            <label for="RememberMe" class="checkbox-label">Remember Me</label>
                        </div>
                        <a href="#" class="forgot-link">Forgot Password?</a>
                    </div>

                    <button type="submit" class="login-button">Login</button>
                </form>

                <div class="login-separator">
                    <span>or</span>
                </div>

                <div class="register-section">
                    <h3>Don't have an account yet?</h3>
                    <p>Register based on your role in the transport process</p>

                    <div class="register-options">
                        <a asp-controller="Account" asp-action="RegisterForTruckCompanies" class="register-option">
                            <div class="register-option-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                            </div>
                            <h4>Customers</h4>
                            <p>Ship your goods with ENN Cargo's solutions</p>
                        </a>

                        <a asp-controller="Account" asp-action="RegisterForStockCompanies" class="register-option">
                            <div class="register-option-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="1" y="3" width="15" height="13"></rect>
                                    <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                                    <circle cx="5.5" cy="18.5" r="2.5"></circle>
                                    <circle cx="18.5" cy="18.5" r="2.5"></circle>
                                </svg>
                            </div>
                            <h4>Carriers</h4>
                            <p>Join our network of transport providers</p>
                        </a>

                        <a asp-controller="Account" asp-action="RegisterForDrivers" class="register-option">
                            <div class="register-option-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="8.5" cy="7" r="4"></circle>
                                    <polyline points="17 11 19 13 23 9"></polyline>
                                </svg>
                            </div>
                            <h4>Drivers</h4>
                            <p>Access your driver portal to manage deliveries</p>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Footer with support link -->
