@model ENN_Cargo.Models.PendingApprovalViewModel
@{
    ViewData["Title"] = "Pending Approval";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ENN Cargo - @ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #003781;
            --secondary-color: #e30613;
            --accent-color: #009fe3;
            --light-gray: #f5f5f5;
            --medium-gray: #e0e0e0;
            --dark-gray: #333;
            --white: #ffffff;
            --success-color: #28a745;
            --info-color: #17a2b8;
            --warning-color: #ffc107;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            color: var(--dark-gray);
            line-height: 1.6;
            background-color: var(--light-gray);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 25px;
            background-color: var(--white);
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            z-index: 10;
        }

        .logo {
            display: flex;
            align-items: center;
        }

            .logo img {
                height: 40px;
                background-color: white;
                padding: 2px;
                border-radius: 3px;
                transition: transform 0.2s;
                cursor: pointer;
            }

                .logo img:hover {
                    transform: scale(1.05);
                }

        /* Language selector styling */
        .language-selector {
            position: relative;
            display: inline-block;
        }

        .language-switch {
            display: flex;
            align-items: center;
            padding: 5px 10px;
            background-color: transparent;
            border: 1px solid rgba(0, 55, 129, 0.3);
            border-radius: 3px;
            cursor: pointer;
            font-size: 0.8rem;
            color: var(--primary-color);
            transition: all 0.3s;
        }

            .language-switch:hover {
                background-color: rgba(0, 55, 129, 0.05);
                border-color: rgba(0, 55, 129, 0.5);
            }

        .flag {
            width: 20px;
            height: 15px;
            margin-right: 5px;
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
            display: inline-block;
            vertical-align: middle;
            border: 1px solid rgba(0,0,0,0.1);
        }

        .flag-uk {
            background-image: url('data:image/svg+xml;base64,');
        }

        .flag-bg {
            background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCA2MDAgNDAwIj48cGF0aCBmaWxsPSIjZmZmZmZmIiBkPSJNMCAwaDYwMHYxMzMuM0gweiIvPjxwYXRoIGZpbGw9IiMwMDk2NjUiIGQ9Ik0wIDEzMy4zaDYwMHYxMzMuNEgweiIvPjxwYXRoIGZpbGw9IiNkNjI2MTIiIGQ9Ik0wIDI2Ni43aDYwMFY0MDBIMHoiLz48L3N2Zz4=');
        }

        .language-flyout {
            display: none;
            position: absolute;
            top: 110%;
            right: 0;
            background-color: white;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            z-index: 1000;
            min-width: 260px;
            border-radius: 3px;
            border-top: 3px solid var(--accent-color);
            animation: fadeIn 0.2s ease-in-out;
        }

            .language-flyout.show {
                display: block;
            }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .heading {
            padding: 16px;
            border-bottom: 1px solid var(--medium-gray);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .headline {
            font-size: 1.1rem;
            color: var(--primary-color);
            font-weight: 600;
        }

        .close-button {
            background: none;
            border: none;
            font-size: 1.4rem;
            cursor: pointer;
            color: var(--dark-gray);
            transition: color 0.2s;
        }

            .close-button:hover {
                color: var(--primary-color);
            }

        .language-list {
            list-style: none;
            padding: 5px 0;
        }

        .language-item {
            cursor: pointer;
            transition: all 0.3s;
        }

            .language-item:hover {
                background-color: #f5f7f9;
            }

            .language-item a {
                display: flex;
                align-items: center;
                text-decoration: none;
                color: var(--dark-gray);
                padding: 12px 16px;
            }

        .label {
            flex-grow: 1;
            margin: 0 10px;
        }

        /* Main content styling */
        .main-content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px 20px;
        }

        .approval-container {
            max-width: 650px;
            width: 100%;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
        }

        .approval-icon {
            margin-bottom: 25px;
        }

            .approval-icon svg {
                width: 80px;
                height: 80px;
                color: var(--info-color);
            }

        .approval-title {
            color: var(--primary-color);
            font-size: 1.8rem;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .approval-message {
            font-size: 1.1rem;
            margin-bottom: 30px;
            color: #555;
            padding: 20px;
            background-color: rgba(23, 162, 184, 0.1);
            border-radius: 6px;
            border-left: 4px solid var(--info-color);
            text-align: left;
        }

        .approval-steps {
            margin: 30px 0;
            text-align: left;
        }

        .step {
            display: flex;
            margin-bottom: 15px;
            align-items: flex-start;
        }

        .step-number {
            width: 28px;
            height: 28px;
            background-color: var(--primary-color);
            color: white;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            margin-right: 15px;
            flex-shrink: 0;
        }

        .step-text {
            flex: 1;
        }

        .return-link {
            display: inline-block;
            margin-top: 20px;
            color: white;
            background-color: var(--primary-color);
            padding: 12px 25px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

            .return-link:hover {
                background-color: var(--accent-color);
                transform: translateY(-2px);
            }

        .footer {
            text-align: center;
            padding: 20px;
            color: #777;
            font-size: 0.8rem;
            border-top: 1px solid var(--medium-gray);
            background-color: white;
        }

        .footer-links {
            margin-top: 10px;
        }

        .footer-link {
            color: var(--primary-color);
            text-decoration: none;
            margin: 0 10px;
            transition: all 0.3s;
            font-size: 0.8rem;
        }

            .footer-link:hover {
                color: var(--accent-color);
                text-decoration: underline;
            }

        /* Responsive adjustments */
        @@media (max-width: 576px) {
            .header

        {
            padding: 10px 15px;
        }

        .logo img {
            height: 35px;
        }

        .approval-title {
            font-size: 1.5rem;
        }

        .approval-message {
            font-size: 1rem;
            padding: 15px;
        }

        .approval-container {
            padding: 20px 15px;
        }

        .approval-icon svg {
            width: 60px;
            height: 60px;
        }

        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="logo">
            <img src="https://res.cloudinary.com/dyonctb8p/image/upload/v1742193325/ENN_cargo_transparent_goqj9p.png" alt="ENN Cargo Logo" onclick="window.location.href='/'">
        </div>

        <div class="language-selector">
            <button type="button" class="language-switch" id="languageSwitch">
                <span class="flag flag-uk"></span>
                <span>EN</span>
                <span style="margin-left: 5px;">▼</span>
            </button>
            <div class="language-flyout" id="languageFlyout">
                <div class="heading">
                    <h2 class="headline">Select a language</h2>
                    <button type="button" class="close-button" id="closeFlyout">×</button>
                </div>
                <ul class="language-list">
                    <li class="language-item">
                        <a href="/int/en" class="international-item">
                            <span class="flag flag-uk"></span>
                            <span class="label">English</span>
                        </a>
                    </li>
                    <li class="language-item">
                        <a href="/bg/en">
                            <span class="flag flag-bg"></span>
                            <span class="label">Български</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Main content -->
    <main class="main-content">
        <div class="approval-container">
            <div class="approval-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
            </div>

            <h1 class="approval-title">Registration Pending Approval</h1>

            <div class="approval-message">
                @Model.Message
            </div>

            <div class="approval-steps">
                <div class="step">
                    <div class="step-number">1</div>
                    <div class="step-text">Your registration request has been submitted successfully.</div>
                </div>
                <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-text">An administrator will review your application within 24-48 hours.</div>
                </div>
                <div class="step">
                    <div class="step-number">3</div>
                    <div class="step-text">You will receive an email notification once your account has been approved.</div>
                </div>
                <div class="step">
                    <div class="step-number">4</div>
                    <div class="step-text">After approval, you can log in using the credentials you provided during registration.</div>
                </div>
            </div>

            <a asp-controller="Home" asp-action="Index" class="return-link">Return to Main Page</a>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>© 2025 ENN Cargo. All rights reserved.</p>
        <div class="footer-links">
            <a href="#" class="footer-link">Terms of Service</a>
            <a href="#" class="footer-link">Privacy Policy</a>
            <a href="#" class="footer-link">Support</a>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Language dropdown toggle
            const languageSwitch = document.getElementById('languageSwitch');
            const languageFlyout = document.getElementById('languageFlyout');
            const closeFlyout = document.getElementById('closeFlyout');

            if (languageSwitch) {
                languageSwitch.addEventListener('click', function(e) {
                    e.stopPropagation(); // Prevent event bubbling
                    languageFlyout.classList.toggle('show');
                });

                if (closeFlyout) {
                    closeFlyout.addEventListener('click', function(e) {
                        e.stopPropagation(); // Prevent event bubbling
                        languageFlyout.classList.remove('show');
                    });
                }

                // Handle language selection
                const languageItems = document.querySelectorAll('.language-item a');
                languageItems.forEach(item => {
                    item.addEventListener('click', function(e) {
                        // Optional: Add visual feedback before redirecting
                        this.style.fontWeight = 'bold';

                        // Close the flyout
                        languageFlyout.classList.remove('show');
                    });
                });

                // Close the flyout if clicked outside
                document.addEventListener('click', function(event) {
                    const isClickInside = languageSwitch.contains(event.target) ||
                                          languageFlyout.contains(event.target);

                    if (!isClickInside && languageFlyout.classList.contains('show')) {
                        languageFlyout.classList.remove('show');
                    }
                });
            }
        });
    </script>
</body>
</html>