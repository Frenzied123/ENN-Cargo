@model ENN_Cargo.Models.VehicleViewModel
@{
    ViewData["Title"] = "Add New Vehicle";
}

<div class="container">
    <div class="stock-container">
        <div class="page-header">
            <h1 class="page-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Add New Vehicle
            </h1>
            <div class="breadcrumb">
                <a asp-controller="Vehicle" asp-action="ListOfVehicles">Vehicles</a>
                <span class="separator">›</span>
                <span class="current">Add Vehicle</span>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Vehicle Details</h2>
                <p class="card-subtitle">Enter all required information to create a new vehicle</p>
            </div>
            <div class="card-body">
                <form asp-action="AddVehicle" method="post" class="stock-form">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-section">
                        <h3 class="section-title">Vehicle Information</h3>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Brand">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M2 18h1.4c1.3 0 2.5-.6 3.3-1.7l6.1-8.6c.7-1.1 2-1.7 3.3-1.7H22"></path>
                                        <path d="M18 2v4"></path>
                                        <path d="M22 4h-4"></path>
                                    </svg>
                                    Brand
                                </label>
                                <input name="Brand" asp-for="Brand" class="form-control" placeholder="Enter vehicle brand" />
                                <span asp-validation-for="Brand" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Model">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                                    </svg>
                                    Model
                                </label>
                                <input name="Model" asp-for="Model" class="form-control" placeholder="Enter vehicle model" />
                                <span asp-validation-for="Model" class="field-validation-error"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Year">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                    </svg>
                                    Year
                                </label>
                                <input name="Year" asp-for="Year" type="number" class="form-control" placeholder="Enter production year" />
                                <span asp-validation-for="Year" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LicensePlate">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect x="3" y="5" width="18" height="14" rx="2" ry="2"></rect>
                                        <path d="M3 10h18"></path>
                                    </svg>
                                    License Plate
                                </label>
                                <input name="LicensePlate" asp-for="LicensePlate" class="form-control" placeholder="Enter license plate number" />
                                <span asp-validation-for="LicensePlate" class="field-validation-error"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3 class="section-title">Company Information</h3>

                        <div class="form-row">
                            <div class="form-group full-width">
                                <label asp-for="SelectedTruckCompanyId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                    </svg>
                                    Truck Company
                                </label>
                                <select name="SelectedTruckCompanyId" asp-for="SelectedTruckCompanyId" asp-items="@Model.TruckCompanies" class="form-control">
                                    <option value="">Select a Truck Company</option>
                                </select>
                                <span asp-validation-for="SelectedTruckCompanyId" class="field-validation-error"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                            </svg>
                            Create Vehicle
                        </button>

                        <a asp-controller="Vehicle" asp-action="ListOfVehicles" class="btn btn-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M19 12H5"></path>
                                <polyline points="12 19 5 12 12 5"></polyline>
                            </svg>
                            Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}