@model ENN_Cargo.Models.VehicleViewModel@{
    ViewData["Title"] = "Update Vehicle";
}<h1>Update Vehicle</h1><form asp-action="UpdateVehicle" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Brand">Brand</label>
        <input name="Brand" asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input name="Model" asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input name="Year" asp-for="Year" type="number" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LicensePlate">License Plate</label>
        <input name="LicensePlate" asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedTruckCompanyId">Truck Company</label>
        <select name="SelectedTruckCompanyId" asp-for="SelectedTruckCompanyId" asp-items="@Model.TruckCompanies" class="form-control">
            <option value="">Select a Truck Company</option>
        </select>
        <span asp-validation-for="SelectedTruckCompanyId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Vehicle</button>
</form>@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}