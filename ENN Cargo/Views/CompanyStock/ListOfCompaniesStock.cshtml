@model IEnumerable<ENN_Cargo.Models.CompanyStockViewModel>

<h2 class="mb-4">Company Stocks</h2>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Country</th>
            <th>Town</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Address</td>
                <td>@item.SelectedCountry</td>
                <td>@item.SelectedTown</td>
                <td>
                    <a asp-action="UpdateCompanyStock" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@item.Id" class="d-inline" onsubmit="return confirmDelete();">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddCompanyStock" class="btn btn-primary">Add a Stock Company</a>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this company stock?");
    }
</script>
